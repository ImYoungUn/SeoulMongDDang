<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mong.ddang.youngun.myapplication.ReadyForGetMongId">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d42426"
        android:text="환영합니다!"
        android:id="@+id/textView3"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/gettingInButton"
    />

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/progressBar_ready"
        android:layout_centerVertical="true"
        android:layout_below="@+id/gettingInButton"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="'버튼을 클릭해 주세요!'"
        android:id="@+id/textView4"
        android:layout_below="@+id/progressBar_ready"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/icon"
        android:id="@+id/gettingInButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
